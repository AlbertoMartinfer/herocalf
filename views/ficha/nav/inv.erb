<% h = hero(params[:param].to_i) %>

<div class="col-md-3">
	<div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
		<a class="nav-link active" id="v-pills-home-tab" data-toggle="pill" href="#v-pills-home" role="tab" aria-controls="v-pills-home" aria-selected="true">
			Equipo
		</a>
		<a class="nav-link" id="v-pills-profile-tab" data-toggle="pill" href="#v-pills-profile" role="tab" aria-controls="v-pills-profile" aria-selected="false">
			Tesoro
		</a>
		<a class="nav-link" id="v-pills-messages-tab" data-toggle="pill" href="#v-pills-messages" role="tab" aria-controls="v-pills-messages" aria-selected="false">
			Banco
		</a>
	</div>
</div>

<% 3.times do |i| %>
	<div class="col-md-3">
		<%= erb :"ficha/inventario/columna#{i+1}", locals: { heroe: h } %>
	</div>
<% end %>

<% if h.abalorios && h.piezas && h.materiales %>
	<div class="row">
		<div class="col-md-4"><%= slim :'ficha/abalorios'  %></div>
		<div class="col-md-4"><%= slim :'ficha/piezas'     %></div>
		<div class="col-md-4"><%= slim :'ficha/materiales' %></div>
	</div>
<% end %>

<% if h.pociones && h.pergaminos %>
<div class="row">
  <div class="col-md-6"><%= slim :'ficha/pociones'   %></div>
  <div class="col-md-6"><%= slim :'ficha/pergaminos' %></div>
</div>	
<% end %>

<% if h.tesoro %>
	<div class="row">
		<div class="col-md-12"><%= slim :'ficha/tesoros' %></div>
	</div>
<% end %>