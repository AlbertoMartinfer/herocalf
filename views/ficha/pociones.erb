<% h = hero(params[:param].to_i) %>

<div class="table-responsive">
	<table class="table">
		<theader>
			<tr><th colspan='<%= h.pociones.count if h.pociones %>'>Pociones</th></tr>
		</theader>
		<tbody>
			<tr>
				<% if h.pociones %>
					<% h.brebajes.each do |pot| %>
						<td><%= erb :"display/item", locals: { item: pot} %></td>
					<% end %>
				<% else %>
					<td>Sin pociones</td>
				<% end %>
			</tr>
		</tbody>
	</table>
</div>