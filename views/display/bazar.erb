<div class="information_popup_container">
	<div class="information">
		<h2><%= bazar.count %></h2>
	</div>
	<% unless bazar.empty? %>
		<div class="popup_information">
			<h2 style="padding: 5px 5px 5px 5px; color:white;">Disponibilidad</h2>
			<center><img src='/images/tesoro/bazar.png' alt='Bazar', id='icon3' /></center>
			<br/>
			<table>
				<tr>
					<th colspan=2>HÃ©roe</th>
					<th>Disponibles</th>
				</tr>
				<% bazar.uniq.each do |h| %>
					<tr>
						<th><img src=<%= hero(h).img_path %> alt='<%= hero(h).name %>', id='icon' /></th>
						<th><%= hero(h).name %></th>
						<th>
							<% if engarce == 'materiales' %>
								<%= hero(h).materiales.count(item_id) %>
							<% else %>
								<%= hero(h).tesoro[engarce].count(item_id) %>
							<% end %>
						</th>
					</tr>
				<% end %>
			</table>
		</div>
	<% end %>
</div>