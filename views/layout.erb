<!DOCTYPE html>
<html lang="es">
	<head>
		<%= erb :'layout/head', locals: { title: "HeroQuest" } %>
	</head>
	<body>
		<div class="container">

			<!-- Static navbar -->
			<%= erb :'layout/nav', locals: { title: "HeroQuest" } %>

			<!-- Main Content -->
			<div>
				<%if @error then %>
					<%= erb :'layout/error' %>
