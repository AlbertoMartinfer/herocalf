<!DOCTYPE html>
<html lang="es">
	<head><%= erb :'layout/head', locals: { title: "HeroQuest" } %></head>
	<body>

		<!-- Navigation -->
		<nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
			<div class="container">
				<%= erb :'layout/nav', locals: { title: "HeroQuest" } %>
			</div>
		</nav>

		<!-- Carousel (only in home)-->
		<% if @carousel %>
			<%= erb :'home/carrousel' %>
		<% end %>

		<div class="container">
			<!-- Error Handler -->
			<% if @error then %>
				<%= erb :'layout/error' %>
			<% end %>
			
			<!-- Main Content -->
			<%= yield %>

			<footer><%= erb :'layout/footer' %></footer>
		</div>

		<!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
		<script src="/js/jquery.js"></script>
		<!-- Include all compiled plugins (below) -->
		<!-- or include individual files as needed -->
		<script src="/js/bootstrap.min.js"></script>
	</body>
</html>