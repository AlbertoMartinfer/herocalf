<h2>Profesiones</h2>
<hr>
<a href=/profesiones>
	<img src="/images/nav/profesiones.png" class="img-fluid" alt="Profesiones">
</a>

<div class="table-responsive">
	<table class='table'>
		<tbody>
			<% profesions.each do |p| %>
				<tr>
					<td><a href=<%="/profesion/#{p.name}"%>>
						<img src=<%= p.img_path %> alt='<%= p.name %>' id='icon' />
					</a></td>
					<td>
						<a href=<%="/profesion/#{p.name}"%>><%= p.name %></a>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>