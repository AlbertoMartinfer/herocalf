<% g = gema(params[:param].to_i) %>
<h2><%= g.name.capitalize %></h2>

<%= erb :'objetos/gemas/detalle', locals: { g: g } %>

<h3>Características</h3>
<dl class="row">
	<dt class="col-sm-3">Calibre</dt>
	<dd class="col-sm-3">
		<a href="/calibre/<%= params[:param].to_i + 1 %>">
			(<%= g.calidad["calibre"] %>) <%= g.calidad["name"] %>
		</a>
	</dd>

	<dt class="col-sm-3">Color</dt>
	<dd class="col-sm-3"><%= g.color %></dd>
</dl>

<h3>Propiedades mágicas</h3>
<p><%= erb :'objetos/gemas/propiedades', locals: { g: g } %></p>

<h3>Disponibilidad</h3>
<p>
	<% unless g.disponibles.empty? %>
		<%= erb :'objetos/gemas/disponibilidad', locals: { g: g } %>
	<% else %>
		Ningún héroe posee esta gema.
	<% end %>
</p>