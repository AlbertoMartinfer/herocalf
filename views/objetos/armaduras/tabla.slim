.table-responsive
	table class="table"
		thead
			tr
				th colspan=2 Armadura
				th Categor√≠a
				th Defensa
				th Precio
		tbody
			- armaduras.map{ |arm| Armadura.new(arm) }.each do |a|
				tr
					td == erb :'display/armadura', locals: { a: a }
					td == a.name
					td == a.categoria
					td == a.defensa
					td == a.precio