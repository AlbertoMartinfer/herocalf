<h2>
	Hechizos
	<% if params[:view] == 'hechizos' %>
		elementales
	<% else %>
		de <%= params[:view] %>
	<% end %>
	de nivel <%= params[:param].to_i || 1 %>
</h2>

<div class="table-responsive">
	<table class="table table-striped table-bordered table-hover table-sm">
		<thead class="thead-dark">
			<th>Icono</th>
			<% unless %w(aire tierra fuego agua).include?(params[:view]) %>
				<th>Elemento</th>
			<% end %>
			<th>Nombre</th>
			<th>Descripci√≥n</th>
			<th>Potencia</th>
		</thead>
		<tbody>
			<%= erb :'magia/hechizos/elemental' %>
		</tbody>
	</table>
</div>

<nav aria-label="Hechizos elementales">
	<ul class="pagination justify-content-center">
		<% 4.times do |level| %>
		<li class="page-item">
			<a class="page-link" href="/<%= params[:view] %>/<%= level + 1 %>">
				<%= level + 1 %>
			</a>
		</li>
		<% end %>
	</ul>
</nav>