<% h = spells.find {|s| s.name == params[:param] } %>
<h2>Estadísticas</h2>
<a href="/hechizo/<%= h.name %>" class="feature-image">
	<img src="/images/magia/ilustraciones/<%= h.name %>.png" 
			 alt="<%= h.name %>" />
</a>

<div class="table-responsive">
	<table class="table">
		<tbody>
			<tr>
				<td>Nivel</td>
				<td width="50%"><%= h.nivel %></td>
			</tr>
			<tr>
				<td>Alcance</td>
				<td width="50%"><%= h.alcance %></td>
			</tr>
			<tr>
				<td>Duración</td>
				<td width="50%"><%= h.duracion %></td>
			</tr>
		</tbody>
	</table>
</div>