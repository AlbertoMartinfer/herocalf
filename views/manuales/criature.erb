<h2><%= params[:param].capitalize %></h2>

<div class="row">
	<div class="col-md-9">
		<h3>Descripción</h3>
		<%= erb :"manuales/bestiario/#{params[:param]}" %>
	</div>
	<div class="col-md-3">
		<img src="/images/criaturas/<%= params[:param] %>.png"
				 alt="<%= params[:param] %>"
				 class="img-responsive" />
	</div>
</div>

<h3>Estadísticas</h3>
<div class="table-responsive">
	<table class='table'>
		<thead>
			<tr>
				<th>Icono</th>
				<% send(params[:param]).first.keys.each do |att| %>
					<% unless att == 'id' %>
						<th>
							<%= att.capitalize %>
						</th>
					<% end %>
				<% end %>
			</tr>	
		</thead>
		<tbody>
			<% send(params[:param]).each do |c| %>
				<tr>
					<td>
						<% img_path = "'../images/criaturas/#{params[:param]}/#{c['nombre']}.png'" %>
						<img src=<%=img_path%> alt='icono', id='icon2' />
					</td>
					<% c.keys.each do |att| %>
						<% unless att == 'id' %>
							<% if att == 'hechizos'%>
								<td>
									<% c[att].each do |h| %>
										<%= erb :'display/spell', locals: {spell: spell(h) } %>
									<% end %>
								</td>
							<% else %>
								<td><%= c[att] %></td>
							<% end %>
						<% end %>
					<% end %>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>