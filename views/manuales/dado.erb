<% calaveras = 0 ; defensas = 0; negros = 0; resultados = [] %>
<% caras = ['attack','attack','attack','defend','defend','black']%>

<% params[:param].to_i.times do %>
	<% resultado = caras[rand(6)] %>
	<% calaveras += 1 if resultado == 'attack' %>
	<% defensas  += 1 if resultado == 'defend' %>
	<% negros    += 1 if resultado == 'black' %>
	<% resultados << resultado %>
<% end %>

<div class="table-responsive">
	<table class='table'>
		<thead>
			<tr>
				<th class="text-center">Repite</th>
				<th class="text-center">Tirada</th>
				<th class="text-center">Calaveras</th>
				<th class="text-center">Defensas</th>
				<th class="text-center">Negros</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td>
					<a href="/dado/<%= params[:param] %>">
						<span class="fa-stack fa-lg">
						  <i class="fa fa-cube fa-stack-1x fa-pulse" aria-hidden="true"></i>
						  <i class="fa fa-repeat fa-stack-2x fa-spin" aria-hidden="true"></i>
						</span>
					</a>
				</td>
				<td><%= params[:param] %> dados</td>
				<td><%= calaveras %></td>
				<td><%= defensas  %></td>
				<td><%= negros    %></td>
			</tr>
		</tbody>
	</table>
</div>

<h3>Resultados</h3>
<p>
	<% resultados.each do |r| %>
		<img src="/images/dado/<%= r %>.png" id='icon' />
	<% end %>
</p>